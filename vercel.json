{
  "version": 2,
  "routes": [
    {
      "src": "/api/generate-quiz/topic",
      "dest": "/index.js"
    },
    {
      "src": "/api/generate-quiz/document", 
      "dest": "/index.js"
    },
    {
      "src": "/socket.io/(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/(.*\\.(js|css|html|ico|png|jpg|jpeg|gif|svg|txt|pdf))",
      "dest": "/$1"
    },
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/index.js"
    }
  ],
  "functions": {
    "index.js": {
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}
